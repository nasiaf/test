<!-- Hero Section -->
<div class="bg-img-hero-center" style="background-image: url(../../assets/cave_a_vin.jpg);">
  <div class="container space-2 space-4-top--lg space-3-bottom--lg">
    <div class="w-md-75">
      <!-- Title -->
      <div class="mb-7">
        <h1 class="display-2 font-size-48--md-down text-white">
          Cave à Vin
          <strong class="u-text-animation u-text-animation--typing"></strong>
        </h1>
      </div>
      <!-- End Title -->
    </div>

    <div class="w-md-150 w-lg-1000">
      <!-- Input -->
      <div class="form-row ">
        <div class="form-group col-md-4">

          <%= form_tag "/wine", method: "post" do %>
          <input class="form-control form__input" type="string" name="name" placeholder="Ajouter un Vin" aria-label="Ajouter un Vin">
        </div>

        <div class="form-group col-md-2">
          <button type="submit" class="btn btn-block btn-primary"/>Ajouter
        <% end %>

      </div>
    </div>
  </div>
</div>
</div>

<!-- End Hero Section -->

<!-- End Header Section -->

<main id="content">

<div class="container" style="margin-top: -140px; margin-bottom: 60px">

  <table class=" table table-striped table-bordered sortable table-responsive-sm">
    <thead class="thead-dark">
      <tr>
        <th scope="col3">
          <center>Vin</center>
        </th>
        <th scope="col3">
          <center>Couleur</center>
        </th>
        <th scope="col3">
          <center>Millésime</center>
        </th>
        <th scope="col3">
          <center>A Boire En</center>
        </th>
        <th scope="col3">
          <center>Quantité</center>
        </th>

      </tr>
    </thead>
    <tbody>

      <tr>

        <% @vins.each do |vin| %>

          <td>
            <center>
              <a id="lien_bleu" href="/wines/<%= vin.id %>"><%= vin.name %></center>
            </td>
            <td>
              <center>
                <% if vin.color %>
                  <%= vin.color %>
                <% else %>
                  -
                <% end %>
                <center></td>
                <td>
                  <center>
                    <% if vin.vintage %>
                      <%= vin.vintage.year %>
                    <% else %>
                      -
                    <% end %>
                  </center>
                </td>
                <td>
                  <center>
                    <% if vin.goal %>
                      <%= vin.goal.year %>
                    <% else %>
                      -
                    <% end %>
                  </center>
                </td>
                <td>
                  <center><%= vin.nbr_bottle %></center>
                </td>
              </tr>

            <% end %>

            <br><br><br/>
            <br><br><br/>
            <br><br><br/>
          </table>

        </div>