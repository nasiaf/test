<main id="content">
  <!-- Hero Section -->
  <div class="bg-img-hero-bottom" style="background-image: url(/assets/pinard4.jpg);">
    <div class="d-flex align-items-end height-400">
      <div class="container space-1-bottom">
        <div class="row align-items-sm-end">
          <div class="col-sm-6 mb-4 mb-sm-4">
            <h1 class="text-black" style="color:rgb(215, 82, 190);"><%= @wine.name %></h1>
            <ul class="list-unstyled text-white mb-0">
              <li class="d-block"><%=@wine.vintage.year if @wine.vintage %></li>

            </ul>
          </div>
          <div class="col-sm-6 text-sm-right">
            <%= form_tag "/wines/#{@wine.id}", method: "delete" do %>

            <input class="btn btn-primary btn-wide" type="submit" value="Supprimer le Vin"/>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End Hero Section -->

<div class="col-lg-7 d-none d-lg-inline-block bg-img-hero" style="background-image: url(/assets/pinard.jpg);">
  <div class="w-md-150 w-lg-1000">
    <!-- Input -->

  </div>
</div>

<!-- End About Section -->

<div class="container space-1--lg">

  <table class="table table-striped table-bordered table-responsive-sm">
    <thead class="thead-light">
      <tr>
        <th scope="col3">
          <center>Couleur</center>
        </th>
        <th scope="col3">
          <center>Millésime</center>
        </th>
        <th scope="col3">
          <center>A Boire En</center>
        </th>
        <th scope="col3">
          <center>Quantité</center>
        </th>

      </tr>
    </thead>
    <tbody>

      <td>
        <center>
          <% if @wine.color %>
            <%= @wine.color %>
          <% else %>
            -
          <% end %>

        </center>
      </td>
      <td>
        <center>
          <% if @wine.vintage %>
            <%= @wine.vintage.year %>
          <% else %>
            -
          <% end %>

        </center>
      </td>
      <td>
        <center>
          <% if @wine.goal %>
            <%= @wine.goal.year %>
          <% else %>
            -
          <% end %>

        </center>
      </td>
      <td>
        <center>
          <%= @wine.nbr_bottle %></center>
      </td>

    </table>
  </div>

  <!-- Divider -->
  <div class="text-center u-divider-wrapper my-3">
    <span class="u-divider u-divider--xs u-divider--text">Modifications</span>
  </div>
  <!-- End Divider -->

  <div class="container space-2 space-lg-3 container-with-border">

    <form>
      <%= form_tag "/wines/#{@wine.id}", method: "patch" do %>

      <div class="form-row">
        <div class="form-group col-md-6">

          <label class="h5 small d-block text-uppercase" for="formGroupExampleInput">Nom du Vin</label>
          <input type="string" class="form-control" id="formGroupExampleInput" placeholder="Nom du Vin" name="name" value="<%= @wine.name %>"/>
        </div>
        <div class="form-group col-md-3">
          <label class="h6 small d-block text-uppercase" for="formGroupExampleInput">Couleur</label>
          <%= select_tag(:color, raw('<option value="1"></option><option value="2">Rouge</option><option value="3">Rosé</option><option value="4">Blanc</option><option value="5">Autre</option>')) %>
        </div>

        <div class="form-group col-md-3">
          <label class="h6 small d-block text-uppercase" for="formGroupExampleInput">Nombre de bouteilles</label>
          <input type="integer" class="form-control" id="formGroupExampleInput" placeholder="Nombre Bouteille" name="nbr_bottle" value="<%= @wine.nbr_bottle %>"/>
        </div>

      </div>
      <div class="row justify-content-md-center">

        <div class="form-group col-md-3">

          <label class="h6 small d-block text-uppercase" for="formGroupExampleInput">Millésime</label>
          <input type="date" class="form-control" id="formGroupExampleInput" placeholder="Millésime" name="vintage" value="<%= @wine.vintage %>"/>
        </div>
        <div class="form-group col-md-3">
          <label class="h6 small d-block text-uppercase" for="formGroupExampleInput">Année de consommation</label>
          <input type="date" class="form-control" id="formGroupExampleInput" placeholder="Année consommation" name="goal" value="<%= @wine.goal %>"/>
        </div>
      </div>
      <div class="row justify-content-md-center">
        <div class=" space-2 col col-lg-4">
          <center>
            <button type="submit" class="btn btn-block btn-primary" value="submit">Valider</button>
          </center>
        </div>

      </div>
    <% end %>

  </form>
</div>

<div class="container" style="margin-top:-5em;">

  <p>
    <center>
      <a href="/wine" id="lien_bleu">Retourner à l'acceuil</a>
    </center>
  </p>
</div>